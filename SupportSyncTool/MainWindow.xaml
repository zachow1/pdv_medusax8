<Window x:Class="SupportSyncTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportSyncTool"
        mc:Ignorable="d"
        Title="Support Sync Tool" Height="560" Width="900" MinHeight="480" MinWidth="820">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="TxtStatus" Text="Pronto"/>
            </StatusBarItem>
        </StatusBar>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Conexão (MariaDB)" Grid.Row="0" Margin="0,0,0,8">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Host:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="TxtHost" Width="220"/>
                        <TextBlock Text="Porta:" Margin="12,0,0,0" Width="60" VerticalAlignment="Center"/>
                        <TextBox Name="TxtPort" Width="80"/>
                        <TextBlock Text="Banco:" Margin="12,0,0,0" Width="70" VerticalAlignment="Center"/>
                        <TextBox Name="TxtDb" Width="180"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="Usuário:" Width="120" VerticalAlignment="Center"/>
                        <TextBox Name="TxtUser" Width="220"/>
                        <TextBlock Text="Senha:" Margin="12,0,0,0" Width="70" VerticalAlignment="Center"/>
                        <PasswordBox Name="PwdPass" Width="220"/>
                        <Button Name="BtnTest" Content="Testar conexão" Margin="12,0,0,0" Click="BtnTest_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <Button Name="BtnSaveConfig" Content="Salvar" Margin="0,0,8,0" Click="BtnSaveConfig_Click" Padding="8,0,8,0"/>
                        <Button Name="BtnLoadConfig" Content="Carregar Configuração" Margin="0,0,8,0" Click="BtnLoadConfig_Click"/>
                        <Button Name="BtnClearConfig" Content="Limpar Configuração" Click="BtnClearConfig_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Operações" Grid.Row="1" Margin="0,0,0,8">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                        <Button Name="BtnSyncClientes" Content="Sincronizar Clientes" Margin="0,0,8,0" Click="BtnSyncClientes_Click"/>
                        <Button Name="BtnSyncProdutos" Content="Sincronizar Produtos" Margin="0,0,8,0" Click="BtnSyncProdutos_Click"/>
                        <Button Name="BtnSyncUsuarios" Content="Sincronizar Usuários" Margin="0,0,8,0" Click="BtnSyncUsuarios_Click"/>
                        <Button Name="BtnSyncTudo" Content="Sincronizar Tudo" Click="BtnSyncTudo_Click"/>
                        <ProgressBar Name="Progress" Width="180" Height="18" Margin="20,0,0,0" IsIndeterminate="False" Visibility="Collapsed"/>
                    </StackPanel>
                </DockPanel>
            </GroupBox>

            <GroupBox Header="Log" Grid.Row="2">
                <DockPanel>
                    <TextBox Name="TxtLog" Margin="8" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </DockPanel>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
