<Window x:Class="PDV_MedusaX8.ChequeSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Cheques Disponíveis" Height="500" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Buscar Cheques Disponíveis" FontSize="18" FontWeight="Bold" Margin="0,0,0,12"/>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome do Cliente:"/>
            <TextBox x:Name="TxtClienteNome" Grid.Row="1" Grid.Column="0" Margin="0,4,8,0"/>

            <TextBlock Grid.Row="0" Grid.Column="1" Text="Número do Cheque:"/>
            <TextBox x:Name="TxtNumeroCheque" Grid.Row="1" Grid.Column="1" Margin="0,4,8,0"/>

            <TextBlock Grid.Row="0" Grid.Column="2" Text="Valor do Cheque:"/>
            <TextBox x:Name="TxtValorCheque" Grid.Row="1" Grid.Column="2" Margin="0,4,8,0"/>

            <TextBlock Grid.Row="0" Grid.Column="3" Text="Vencimento:"/>
            <DatePicker x:Name="DtVencimento" Grid.Row="1" Grid.Column="3" Margin="0,4,8,0"/>

            <Button Grid.Row="1" Grid.Column="4" Content="Buscar" Width="100" Click="BtnBuscar_Click" Margin="0,4,0,0"/>
        </Grid>

        <DataGrid x:Name="DgCheques" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                  SelectionChanged="DgCheques_SelectionChanged" Margin="0,0,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Emitente" Binding="{Binding Emitente}" Width="*"/>
                <DataGridTextColumn Header="CPF/CNPJ" Binding="{Binding CpfCnpjEmitente}" Width="120"/>
                <DataGridTextColumn Header="Banco" Binding="{Binding BancoCodigo}" Width="80"/>
                <DataGridTextColumn Header="Agência" Binding="{Binding Agencia}" Width="80"/>
                <DataGridTextColumn Header="Conta" Binding="{Binding Conta}" Width="100"/>
                <DataGridTextColumn Header="Nº Cheque" Binding="{Binding NumeroCheque}" Width="100"/>
                <DataGridTextColumn Header="Vencimento" Binding="{Binding BomPara, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSelecionar" Content="Selecionar" Width="110" Margin="0,0,10,0" Click="BtnSelecionar_Click" IsEnabled="False"/>
            <Button Content="Cancelar" Width="110" Click="BtnCancelar_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>