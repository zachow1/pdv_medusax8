<Window x:Class="PDV_MedusaX8.AberturaCaixaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abertura de Caixa" Height="260" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Valor Inicial (Dinheiro):"/>
            <TextBox x:Name="TxtValor" Grid.Row="1" Grid.Column="0" Margin="0,8,12,8" FontSize="16" Text="0,00" HorizontalAlignment="Stretch" Style="{StaticResource AppInputTextBox}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Motivo (opcional):"/>
            <TextBox x:Name="TxtMotivo" Grid.Row="3" Grid.Column="0" Margin="0,8,12,8" HorizontalAlignment="Stretch" Style="{StaticResource AppInputTextBox}"/>
        </Grid>

        <!-- Painel de autorização do supervisor (exibido quando obrigatório) -->
        <StackPanel x:Name="SupervisorPanel" Grid.Row="1" Visibility="Collapsed" Margin="0,0,0,8">
            <TextBlock Text="Autorização do Supervisor" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Código:" Width="100"/>
                <TextBox x:Name="TxtSupervisorCode" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Senha:" Width="100"/>
                <PasswordBox x:Name="TxtSupervisorPassword" Width="160"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvar" Width="100" Margin="0,0,8,0" Click="BtnSalvar_Click" Padding="8,0,8,0"/>
            <Button Content="Cancelar" Width="100" Click="BtnCancelar_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>