<Window x:Class="PDV_MedusaX8.ConsumidorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clientes" Height="460" Width="720"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <!-- Campo Ãºnico de filtro com pesquisa viva -->
            <TextBox x:Name="TxtFiltro" Width="420" Height="28" ToolTip="Pesquisar por ID, Nome ou CPF/CNPJ (filtra enquanto digita)"/>
        </StackPanel>

        <DataGrid x:Name="GridResultados"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="GridResultados_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="BtnCadastrar" Content="Cadastrar Cliente" Width="150" Height="28" Margin="0,0,8,0" Click="CadastrarCliente_Click"/>
            <Button x:Name="BtnOk" Content="OK" Width="100" Height="28" Margin="0,0,8,0" Click="BtnOk_Click"/>
            <Button x:Name="BtnCancelar" Content="Cancelar" Width="100" Height="28" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>