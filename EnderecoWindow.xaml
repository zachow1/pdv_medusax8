<Window x:Class="PDV_MedusaX8.EnderecoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Endereço" Height="420" Width="640" WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Adicionar Endereço" FontSize="16" FontWeight="Bold"/>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Tipo" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="TxtTipo" Grid.Row="0" Grid.Column="0" Margin="0,22,8,8"/>

            <TextBlock Text="Rua" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="TxtRua" Grid.Row="1" Grid.Column="0" Margin="0,22,8,8"/>

            <TextBlock Text="Número" Grid.Row="1" Grid.Column="1"/>
            <TextBox x:Name="TxtNumero" Grid.Row="1" Grid.Column="1" Margin="0,22,8,8"/>

            <TextBlock Text="Complemento" Grid.Row="1" Grid.Column="2"/>
            <TextBox x:Name="TxtComplemento" Grid.Row="1" Grid.Column="2" Margin="0,22,0,8"/>

            <TextBlock Text="Bairro" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="TxtBairro" Grid.Row="2" Grid.Column="0" Margin="0,22,8,8"/>

            <TextBlock Text="Cidade" Grid.Row="2" Grid.Column="1"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,22,8,8">
                <TextBox x:Name="TxtCidade" MinWidth="160"/>
                <Button Content="Buscar" Click="BuscarCidade_Click" Margin="8,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Estado" Grid.Row="2" Grid.Column="2"/>
            <TextBox x:Name="TxtEstado" Grid.Row="2" Grid.Column="2" Margin="0,22,0,8"/>

            <TextBlock Text="CEP" Grid.Row="3" Grid.Column="0"/>
            <TextBox x:Name="TxtCep" Grid.Row="3" Grid.Column="0" Margin="0,22,8,8"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Click="Cancel_Click" Margin="0,0,8,0" Padding="8,0,8,0"/>
            <Button Content="Salvar" Background="#4CAF50" Foreground="White" Click="Ok_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>