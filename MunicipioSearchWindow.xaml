<Window x:Class="PDV_MedusaX8.MunicipioSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Município" Height="460" Width="700" WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Buscar cidade" FontSize="16" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,12">
            <TextBox x:Name="TxtQuery" MinWidth="260" Tag="Digite parte do nome da cidade"/>
            <Button Content="Buscar" Margin="8,0,0,0" Click="Buscar_Click"/>
        </StackPanel>

        <DataGrid x:Name="GridMunicipios" Grid.Row="2" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" Margin="0,0,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="100"/>
                <DataGridTextColumn Header="Cidade" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="UF" Binding="{Binding UF}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Click="Cancel_Click" Margin="0,0,8,0" Padding="8,0,8,0"/>
            <Button Content="Salvar" Background="#4CAF50" Foreground="White" Click="Ok_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>