<Window x:Class="PDV_MedusaX8.ClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cliente" Height="640" Width="900" WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Cadastro de Cliente" FontSize="18" FontWeight="Bold"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <GroupBox Header="Dados do Cliente" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Nome" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="TxtNome" Grid.Row="0" Grid.Column="0" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Nome Fantasia" Grid.Row="0" Grid.Column="2"/>
                        <TextBox x:Name="TxtNomeFantasia" Grid.Row="0" Grid.Column="2" Margin="0,8,0,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="CPF/CNPJ" Grid.Row="1" Grid.Column="0"/>
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,8,8,8">
                            <TextBox x:Name="TxtCpfCnpj" MinWidth="180" MaxLength="18" LostFocus="TxtCpfCnpj_LostFocus" PreviewTextInput="TxtCpfCnpj_PreviewTextInput" TextChanged="TxtCpfCnpj_TextChanged" DataObject.Pasting="OnCpfCnpjPasting" Style="{StaticResource AppInputTextBox}"/>
                            <TextBlock x:Name="LblTipoDoc" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="#555" FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock Text="IE" Grid.Row="1" Grid.Column="1"/>
                        <TextBox x:Name="TxtIE" Grid.Row="1" Grid.Column="1" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <CheckBox x:Name="ChkIsentoIE" Content="Isento IE" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,8,0,8"/>

                        <TextBlock Text="Data de Nascimento" Grid.Row="2" Grid.Column="0"/>
                        <DatePicker x:Name="DtNascimento" Grid.Row="2" Grid.Column="0" Margin="0,8,8,8"/>

                        <TextBlock Text="Telefone" Grid.Row="2" Grid.Column="1"/>
                        <TextBox x:Name="TxtTelefone" Grid.Row="2" Grid.Column="1" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Email" Grid.Row="2" Grid.Column="2"/>
                        <TextBox x:Name="TxtEmail" Grid.Row="2" Grid.Column="2" Margin="0,8,0,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Limite de Crédito" Grid.Row="3" Grid.Column="0"/>
                        <TextBox x:Name="TxtLimiteCredito" Grid.Row="3" Grid.Column="0" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Endereço: Rua" Grid.Row="4" Grid.Column="0"/>
                        <TextBox x:Name="TxtRua" Grid.Row="4" Grid.Column="0" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Número" Grid.Row="4" Grid.Column="1"/>
                        <TextBox x:Name="TxtNumero" Grid.Row="4" Grid.Column="1" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Complemento" Grid.Row="4" Grid.Column="2"/>
                        <TextBox x:Name="TxtComplemento" Grid.Row="4" Grid.Column="2" Margin="0,8,0,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Bairro" Grid.Row="5" Grid.Column="0"/>
                        <TextBox x:Name="TxtBairro" Grid.Row="5" Grid.Column="0" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="Cidade" Grid.Row="5" Grid.Column="1"/>
                        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,8,8,8">
                            <TextBox x:Name="TxtCidade" MinWidth="180" Style="{StaticResource AppInputTextBox}"/>
                            <Button Content="Buscar" Click="BuscarCidade_Click" Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Estado" Grid.Row="5" Grid.Column="2"/>
                        <TextBox x:Name="TxtEstado" Grid.Row="5" Grid.Column="2" Margin="0,8,0,8" Style="{StaticResource AppInputTextBox}"/>

                        <TextBlock Text="CEP" Grid.Row="6" Grid.Column="0"/>
                        <TextBox x:Name="TxtCep" Grid.Row="6" Grid.Column="0" Margin="0,8,8,8" Style="{StaticResource AppInputTextBox}"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Endereços adicionais">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
                            <Button Content="Adicionar Endereço" Click="AddAddress_Click" Margin="0,0,8,0"/>
                            <Button Content="Remover Selecionado" Click="RemoveSelecionado_Click"/>
                        </StackPanel>
                        <DataGrid x:Name="GridEnderecos" AutoGenerateColumns="False" Margin="8" SelectionMode="Single" SelectionUnit="FullRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding AddressType}" Width="100"/>
                                <DataGridTextColumn Header="Rua" Binding="{Binding Street}" Width="200"/>
                                <DataGridTextColumn Header="Número" Binding="{Binding Number}" Width="80"/>
                                <DataGridTextColumn Header="Complemento" Binding="{Binding Complement}" Width="150"/>
                                <DataGridTextColumn Header="Bairro" Binding="{Binding District}" Width="150"/>
                                <DataGridTextColumn Header="Cidade" Binding="{Binding City}" Width="150"/>
                                <DataGridTextColumn Header="Estado" Binding="{Binding State}" Width="80"/>
                                <DataGridTextColumn Header="CEP" Binding="{Binding ZipCode}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Click="Cancel_Click" Margin="0,0,8,0" Padding="8,0,8,0"/>
            <Button Content="Salvar" Background="#4CAF50" Foreground="White" Click="Save_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>