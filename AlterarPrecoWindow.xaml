<Window x:Class="PDV_MedusaX8.AlterarPrecoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alterar Preço" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Código:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="TxtCodigoInput" Width="160"/>
        </StackPanel>
        <TextBlock x:Name="TxtDescricao" Grid.Row="1" FontWeight="Bold" FontSize="16"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="NOVO VALOR:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
            <TextBox x:Name="TxtPreco" Width="120" PreviewTextInput="NumericOnly_PreviewTextInput"/>
            <Button Content="ALTERAR/SALVAR" Margin="12,0,0,0" IsDefault="True" Click="BtnSalvar_Click" Padding="8,4"/>
            <Button Content="CANCELAR" Margin="6,0,0,0" IsCancel="True" Padding="8,4"/>
        </StackPanel>
    </Grid>
</Window>