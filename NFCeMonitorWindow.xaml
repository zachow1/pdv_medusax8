<Window x:Class="PDV_MedusaX8.NFCeMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acompanhamento NFC-e" Height="520" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="NFC-e emitidas" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
            <Button Content="Atualizar" Margin="10,0,0,0" Click="Refresh_Click" Background="#28a745" Foreground="White"/>
        </StackPanel>

        <DataGrid Name="DgvNFCe" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Número" Binding="{Binding Numero}" Width="80"/>
                <DataGridTextColumn Header="Série" Binding="{Binding Serie}" Width="60"/>
                <DataGridTextColumn Header="Chave" Binding="{Binding Chave}" Width="200"/>
                <DataGridTextColumn Header="Emissão" Binding="{Binding DataEmissao}" Width="130"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Protocolo" Binding="{Binding Protocolo}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N2}" Width="90"/>
                <DataGridTextColumn Header="Consumidor" Binding="{Binding ConsumidorNome}" Width="*"/>
                <DataGridTextColumn Header="Último Retorno" Binding="{Binding UltimoStatus}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Abrir XML" Click="OpenXml_Click" Margin="0,0,8,0"/>
            <Button Content="Fechar" Click="Close_Click" Background="#dc3545" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>