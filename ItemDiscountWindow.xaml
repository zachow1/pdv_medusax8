<Window x:Class="PDV_MedusaX8.ItemDiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desconto por Item" Height="420" Width="640" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Itens" Grid.Column="0" Margin="0,0,10,0">
                <ListView Name="ItemsList" SelectionMode="Single">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Código" DisplayMemberBinding="{Binding Codigo}" Width="80"/>
                            <GridViewColumn Header="Descrição" DisplayMemberBinding="{Binding Descricao}" Width="180"/>
                            <GridViewColumn Header="Qt" DisplayMemberBinding="{Binding Qt}" Width="60"/>
                            <GridViewColumn Header="Vl.Unit" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding VlUnit, StringFormat=N2}" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Total" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Total, StringFormat=N2}" HorizontalAlignment="Right"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <GroupBox Header="Desconto" Grid.Column="1">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Valor:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Name="TxtValue" Width="180" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <CheckBox Name="ChkPercent" Content="Percentual (%)" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Motivo:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Name="CmbReason" Width="220">
                            <ComboBoxItem Content="Promocional"/>
                            <ComboBoxItem Content="Convênio"/>
                            <ComboBoxItem Content="Acordo"/>
                            <ComboBoxItem Content="Quebra"/>
                            <ComboBoxItem Content="Outros"/>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock Name="TxtHint" Foreground="Gray" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvar" Width="110" Margin="0,10,8,0" IsDefault="True" Click="Confirm_Click" Padding="8,0,8,0"/>
            <Button Content="Cancelar" Width="110" Margin="0,10,0,0" IsCancel="True" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>