<Window x:Class="PDV_MedusaX8.SangriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sangria" Height="230" Width="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Valor:"/>
        <TextBox Name="TxtValor" Grid.Row="1" Margin="0,8,0,10" Width="160" Style="{StaticResource AppInputTextBox}"/>
        <Button Name="BtnBuscarCheque" Grid.Row="2" Content="Buscar cheque no sistema" Width="200" Click="BtnBuscarCheque_Click"/>

        <TextBlock Grid.Row="3" Text="Motivo:"/>
        <TextBox Name="TxtMotivo" Grid.Row="4" Margin="0,8,0,10" Style="{StaticResource AppInputTextBox}"/>

        <!-- Painel de autorização do supervisor (exibido quando obrigatório) -->
        <StackPanel Name="SupervisorPanel" Grid.Row="5" Visibility="Collapsed" Margin="0,10,0,10">
            <TextBlock Text="Autorização do Supervisor" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Código:" Width="100"/>
                <TextBox Name="TxtSupervisorCode" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Senha:" Width="100"/>
                <PasswordBox Name="TxtSupervisorPassword" Width="160"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvar" Width="100" Margin="0,0,10,0" Click="BtnSalvar_Click" Padding="8,0,8,0"/>
            <Button Content="Cancelar" Width="100" Click="BtnCancelar_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>