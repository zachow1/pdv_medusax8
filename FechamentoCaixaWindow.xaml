<Window x:Class="PDV_MedusaX8.FechamentoCaixaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fechamento de Caixa" Height="420" Width="680" Background="#f7f7f7" WindowStartupLocation="CenterOwner">
    <Border BorderBrush="#d0d0d0" BorderThickness="1" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Resumo do dia" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

            <Grid Grid.Row="1" Margin="0,6,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Coluna Esquerda -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,8,0">
                    <TextBlock Text="PerÃ­odo" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPeriodo" Text="Hoje" Margin="0,0,0,8"/>

                    <TextBlock Text="Vendas (Sales)" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total:" Width="120"/>
                        <TextBlock x:Name="TxtTotalVendas" Text="R$ 0,00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,8">
                        <TextBlock Text="Qtd:" Width="120"/>
                        <TextBlock x:Name="TxtQtdVendas" Text="0"/>
                    </StackPanel>

                    <TextBlock Text="Movimentos de Caixa" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Abertura:" Width="120"/>
                        <TextBlock x:Name="TxtTotalAbertura" Text="R$ 0,00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Suprimento:" Width="120"/>
                        <TextBlock x:Name="TxtTotalSuprimento" Text="R$ 0,00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                        <TextBlock Text="Sangria:" Width="120"/>
                        <TextBlock x:Name="TxtTotalSangria" Text="R$ 0,00"/>
                    </StackPanel>
                </StackPanel>

                <!-- Coluna Direita -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                    <TextBlock Text="NFC-e" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total:" Width="140"/>
                        <TextBlock x:Name="TxtTotalNFCe" Text="R$ 0,00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,8">
                        <TextBlock Text="Qtd:" Width="140"/>
                        <TextBlock x:Name="TxtQtdNFCe" Text="0"/>
                    </StackPanel>

                    <TextBlock Text="Pagamentos NFC-e (tPag)" FontWeight="Bold"/>
                    <ListView x:Name="LstPagamentosNFCe" Height="180" Margin="0,2,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Meio" DisplayMemberBinding="{Binding Meio}" Width="180"/>
                                <GridViewColumn Header="Total" DisplayMemberBinding="{Binding TotalFmt}" Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Imprimir" Width="120" Height="34" Margin="0,0,8,0" Click="BtnImprimir_Click"/>
                <Button Content="Fechar Caixa" Width="140" Height="34" Background="#28a745" Foreground="White" Click="BtnFechar_Click"/>
                <Button Content="Sair" Width="100" Height="34" Margin="8,0,0,0" Click="BtnSair_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>