<Window x:Class="PDV_MedusaX8.FechamentoCaixaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fechamento de Caixa" Height="640" Width="760" Background="#f7f7f7" WindowStartupLocation="CenterOwner"
        Loaded="FechamentoCaixaWindow_Loaded">
    <Border BorderBrush="#d0d0d0" BorderThickness="1" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="ResumoHeader" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Resumo do dia" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
            <!-- Resumo do período -->
            <Border x:Name="ResumoPanel" Grid.Row="1" BorderBrush="#e0e0e0" BorderThickness="1" Padding="10" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,10,0" Grid.Row="0" Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Período:" Width="160"/>
                            <TextBlock x:Name="TxtPeriodoLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Total de Vendas:" Width="160"/>
                            <TextBlock x:Name="TxtTotalVendasLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Qtd. de Vendas:" Width="160"/>
                            <TextBlock x:Name="TxtQtdVendasLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Total NFC-e:" Width="160"/>
                            <TextBlock x:Name="TxtTotalNFCeLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Qtd. NFC-e:" Width="160"/>
                            <TextBlock x:Name="TxtQtdNFCeLabel"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Abertura:" Width="160"/>
                            <TextBlock x:Name="TxtTotalAberturaLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Suprimento:" Width="160"/>
                            <TextBlock x:Name="TxtTotalSuprimentoLabel"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Sangria:" Width="160"/>
                            <TextBlock x:Name="TxtTotalSangriaLabel"/>
                        </StackPanel>
                    </StackPanel>
                    <!-- Relação de formas de pagamento e valores -->
                    <StackPanel x:Name="ResumoPagamentosPanel" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
                        <TextBlock Text="Formas de pagamento no período" FontWeight="Bold"/>
                        <!-- Linhas serão adicionadas via code-behind -->
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Painel de contagem física -->
            <Border x:Name="ContagemPanel" Grid.Row="1" BorderBrush="#e0e0e0" BorderThickness="1" Padding="10" Background="#fbfbfb" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Contagem Física do Caixa" FontWeight="Bold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Dinheiro:" Width="160"/>
                        <TextBox x:Name="TxtTotalDinheiro" Width="160" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Cartão Débito:" Width="160"/>
                        <TextBox x:Name="TxtTotalDebito" Width="160" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Cartão Crédito:" Width="160"/>
                        <TextBox x:Name="TxtTotalCredito" Width="160" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Cheques:" Width="160"/>
                        <TextBox x:Name="TxtTotalCheques" Width="160" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="PIX:" Width="160"/>
                        <TextBox x:Name="TxtTotalPix" Width="160" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Observações:" Width="160"/>
                        <TextBox x:Name="TxtObservacoes" Width="360" Style="{StaticResource AppInputTextBox}" VerticalContentAlignment="Center" Padding="10,2"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Painel de autorização do supervisor (exibido quando obrigatório) -->
            <StackPanel x:Name="SupervisorPanel" Grid.Row="2" Visibility="Collapsed" Margin="0,0,0,10">
                <TextBlock Text="Autorização do Supervisor" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Código:" Width="140"/>
                    <TextBox x:Name="TxtSupervisorCode" Width="160" VerticalContentAlignment="Center" Padding="10,2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Senha:" Width="140"/>
                    <PasswordBox x:Name="TxtSupervisorPassword" Width="160" VerticalContentAlignment="Center" Padding="10,2"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Imprimir" Width="120" Height="34" Margin="0,0,8,0" Click="BtnImprimir_Click"/>
                <Button Content="Fechar Caixa" Width="140" Height="34" Background="#28a745" Foreground="White" Click="BtnFechar_Click"/>
                <Button Content="Sair" Width="100" Height="34" Margin="8,0,0,0" Click="BtnSair_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>