<Window x:Class="PDV_MedusaX8.MainWindow" KeyDown="Window_KeyDown" Closing="MainWindow_Closing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDV - MedusaX8"
        WindowStyle="None" WindowState="Maximized" AllowsTransparency="False"
        Background="#dadada"
        FontFamily="Segoe UI">

    <Window.Resources>

        <Style x:Key="ShortcutButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Background" Value="{StaticResource BrPrimariaAcao}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056b3"/>
                </Trigger>
                <!-- Aparência desativada: cor mais clara para indicar indisponível -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#9E9E9E"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Estilo global para itens de menu: desabilitado com cor mais clara -->
        <Style TargetType="MenuItem">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#9E9E9E"/>
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Placeholder (Watermark) styles -->
        <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="{StaticResource BrTexto}"
                                       Opacity="0.5"
                                       IsHitTestVisible="False"
                                       Margin="10,0,5,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- Pulso suave do placeholder quando vazio e sem foco -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                    <Condition Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource TemplatedParent}}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.EnterActions>
                                    <BeginStoryboard Name="WatermarkPulse">
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="Watermark"
                                                             Storyboard.TargetProperty="Opacity"
                                                             From="0.4" To="0.7" Duration="0:0:1.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.EnterActions>
                                <MultiDataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="WatermarkPulse"/>
                                </MultiDataTrigger.ExitActions>
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WatermarkTextBoxCenterStyle" TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="White"
                                       Opacity="0.5"
                                       IsHitTestVisible="False"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Grid raiz sem margem externa para usar 100% da janela -->
    <Grid x:Name="RootGrid" Background="{StaticResource BrFundoApp}" ContextMenuOpening="MainGrid_ContextMenuOpening">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Configurações (F4)" Tag="F4" Click="MenuShortcut_Click"/>
                <Separator/>
                <MenuItem Header="Sangria (Ctrl+L)" Tag="CTRL+L" Click="MenuShortcut_Click"/>
                <MenuItem Header="Suprimento (Ctrl+S)" Tag="CTRL+S" Click="MenuShortcut_Click"/>
                <MenuItem Header="Fechar Caixa (Ctrl+F)" Tag="CTRL+F" Click="MenuShortcut_Click"/>
                <MenuItem Header="Consulta NFC-e" Tag="NFCe" Click="MenuShortcut_Click"/>
                <MenuItem Header="Receber Título (Ctrl+R)" Tag="CTRL+R" Click="MenuShortcut_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Topo (30px) com controles de janela -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <!-- Fundo ocupando a largura total alinhada às colunas do conteúdo -->
            <Border Grid.ColumnSpan="3" Panel.ZIndex="0" Margin="8,0,8,15" BorderBrush="{StaticResource CorBorda}" BorderThickness="0,0,0,0" Background="{StaticResource BrFundoApp}"/>

            <!-- Título alinhado à coluna esquerda -->
            <TextBlock Grid.Column="0" Text="Sistema PDV MedusaX8 | Versão: 1.0.0 (DB: 5.1)"
                       VerticalAlignment="Top" Margin="10,0,0,0"
                       Foreground="{StaticResource BrTexto}" FontSize="12"/>

            <!-- Botões ancorados ao canto direito da janela -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,8,0">
                <Button Name="BtnSettingsHeader" Width="96" Height="26" Margin="0,0,8,0" VerticalContentAlignment="Center" Padding="0,2,0,2" Style="{StaticResource CompactButton}"
                          Background="{StaticResource BrPrimariaAcao}" Foreground="White" FontSize="10"
                          Click="BtnSettingsHeader_Click"
                          PreviewMouseRightButtonDown="BtnSettingsHeader_PreviewMouseRightButtonDown"
                          ToolTip="Dica: Ctrl + Clique direito abre a lista de atalhos">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Top"/>
                        <TextBlock Text="Configurações" VerticalAlignment="Top" Margin="0"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu x:Name="SettingsContextMenu">
                            <MenuItem Header="Abrir Configurações (F4)" Tag="F4" Click="MenuShortcut_Click"/>
                            <Separator/>
                            <MenuItem Header="Pagamento (F3)" Tag="F3" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Desconto Item (SHIFT+D)" Tag="SHIFT+D" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Cancelar Item (F1)" Tag="F1" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Cancelar Venda (F5)" Tag="F5" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Cliente (F7)" Tag="F7" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Consumidor (F12)" Tag="F12" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Produto Fácil (F8)" Tag="F8" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Consultar (F6)" Tag="consultar" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Balança (F10)" Tag="F10" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Sangria (Ctrl+L)" Tag="CTRL+L" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Suprimento (Ctrl+S)" Tag="CTRL+S" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Receber Título (Ctrl+R)" Tag="CTRL+R" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Fechar Caixa (Ctrl+F)" Tag="CTRL+F" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Operador (Ctrl+O)" Tag="CTRL+O" Click="MenuShortcut_Click"/>
                            <MenuItem Header="NFC-e Acompanhar" Tag="NFCe" Click="MenuShortcut_Click"/>
                            <MenuItem Header="Importar Pedido ERP" Click="OpenERPImport_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button Name="BtnLogout" Width="120" Height="26" Margin="0,0,8,0" VerticalContentAlignment="Center" Padding="0,2,0,2" Style="{StaticResource CompactButton}" 
                          Background="#FF6C757D" Foreground="White" FontSize="10" 
                          Click="MenuShortcut_Click" Tag="CTRL+O" ToolTip="Trocar Operador">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Trocar Operador" VerticalAlignment="Center" Margin="0"/>
                    </StackPanel>
                </Button>
                <!-- Aviso de situação do caixa -->
                <Border x:Name="BadgeCaixaStatus" Height="22" Padding="8,2" Margin="0,2,8,0" CornerRadius="11"
                        VerticalAlignment="Top" Background="#28a745" BorderBrush="#1e7e34" BorderThickness="1" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B8;" FontSize="12" Margin="0,0,6,0" Foreground="White"/>
                        <TextBlock x:Name="LblCaixaStatus" Text="Caixa Aberto" Foreground="White" FontSize="10"/>
                    </StackPanel>
                </Border>
                <Button Content="-" Width="30" Height="26" Margin="0" Click="MinimizeWindow" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontSize="12" VerticalContentAlignment="Top" Padding="0,1,0,0"/>
                <Button Content="&#9744;" Width="30" Height="26" Margin="0" Click="MaximizeRestoreWindow" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontSize="12" VerticalContentAlignment="Top" Padding="0,1,0,0"/>
                <Button Name="BtnCloseWindow" Content="X" Width="30" Height="26" Background="{StaticResource BrCancelar}" Foreground="White" Click="CloseWindow" FontSize="12" VerticalContentAlignment="Top" Padding="0,1,0,0" Style="{StaticResource CompactButton}"/>
            </StackPanel>
        </Grid>

        <!-- Status/Info (Auto) -->
        <Grid Grid.Row="1" Margin="0,5,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="99*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Background="#c9c9c9" Height="Auto" MinHeight="80" MaxHeight="120" CornerRadius="5"
                    BorderBrush="{StaticResource CorBorda}" BorderThickness="0" Padding="0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Status do Caixa: " Foreground="{StaticResource BrTexto}" FontSize="14"/>
                        <TextBlock Text="CAIXA EM ATENDIMENTO" FontWeight="Bold" Foreground="{StaticResource BrPrimariaAcao}" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Último Produto Registrado: " Foreground="{StaticResource BrTexto}" FontSize="12"/>
                        <TextBlock Text="Água Mineral Sem Gás (R$ 5,00)" FontWeight="Bold" Foreground="{StaticResource BrPrimariaAcao}" FontSize="12" Name="LastProductText"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Conteúdo Principal (*) -->
        <Grid x:Name="MainContentGrid" Grid.Row="2" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>

            <!-- Coluna Esquerda - Itens e Totais -->
            <Border Grid.Column="0" BorderBrush="{StaticResource CorBorda}" BorderThickness="0" Background="{StaticResource BrFundoApp}" Margin="8,0,0,0">
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <!-- Tabela com estilo moderno e sem linhas/sombras -->
                    <Border Grid.Row="0" Background="#FFFFFF" CornerRadius="6" Padding="6" BorderThickness="0" Name="LeftTopBorder" Margin="0,0,0,0" VerticalAlignment="Stretch" ClipToBounds="True" SnapsToDevicePixels="True">
                        <DataGrid Name="DgvProdutos" HeadersVisibility="Column" IsReadOnly="True"
                                   AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                   GridLinesVisibility="None" RowHeight="36" ColumnHeaderHeight="34" SelectionMode="Single"
                                   AlternationCount="2" Foreground="#10181a" FontSize="13"
                                   FrozenColumnCount="2"
                                   BorderThickness="0" Background="Transparent"
                                   FocusVisualStyle="{x:Null}">
                            <DataGrid.Resources>
                                <!-- Cabeçalho: cor definida pelo cliente (#dce7e9) -->
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#e9edf6"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,6,15,6"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>

                                <!-- Remover realce azul de seleção/foco -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#10181a"/>

                                <!-- Células: padding fino e sem bordas internas -->
                                <Style TargetType="{x:Type DataGridCell}">
                                    <Setter Property="Padding" Value="8,0,15,0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#10181a"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Texto alinhado à direita (já existente, mantido) -->
                                <Style x:Key="RightAlignStyle" TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style x:Key="QtColumnStyle" TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCancellation}" Value="True">
                                            <Setter Property="Foreground" Value="#8a0000"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Alinhamentos adicionais para colunas -->
                                <Style x:Key="LeftAlignStyle" TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style x:Key="CenterAlignStyle" TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>

                                <!-- Estilos conscientes de cancelamento (herdam alinhamentos) -->
                                <Style x:Key="CancelAwareLeftStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource LeftAlignStyle}">
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCancellation}" Value="True">
                                            <Setter Property="Foreground" Value="#8a0000"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                                <Style x:Key="CancelAwareRightStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource RightAlignStyle}">
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCancellation}" Value="True">
                                            <Setter Property="Foreground" Value="#8a0000"/>
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Linhas: zebra + hover clarinho -->
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="Background" Value="#FFFFFF"/>
                                    <Setter Property="Foreground" Value="#10181a"/>
                                    <Style.Triggers>
                                        <!-- Linhas canceladas: fundo salmão claro + texto vinho escuro -->
                                        <DataTrigger Binding="{Binding IsCancellation}" Value="True">
                                            <Setter Property="Background" Value="#ffc0b5"/>
                                            <Setter Property="Foreground" Value="#8a0000"/>
                                        </DataTrigger>

                                        <!-- Zebra apenas quando não cancelado (por ordem, será sobrescrito pelo trigger acima se cancelado) -->
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#e5e4e2"/>
                                        </Trigger>

                                        <!-- Hover só quando não cancelado -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                <Condition Binding="{Binding IsCancellation}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#eaf2ff"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ITEM" Width="60" Binding="{Binding Item}" ElementStyle="{StaticResource CenterAlignStyle}"/>
                                <DataGridTextColumn Header="CÓDIGO" Width="120" Binding="{Binding Codigo}" ElementStyle="{StaticResource LeftAlignStyle}"/>
                                <DataGridTextColumn Header="DESCRIÇÃO" Width="*" Binding="{Binding Descricao}" ElementStyle="{StaticResource CancelAwareLeftStyle}"/>
                                <DataGridTextColumn Header="QT." Width="80" Binding="{Binding Qt}" ElementStyle="{StaticResource QtColumnStyle}"/>
                                <DataGridTextColumn Header="VL. UNIT." Width="120" Binding="{Binding VlUnit, StringFormat=R$ {0:N2}}" ElementStyle="{StaticResource CancelAwareRightStyle}"/>
                                <DataGridTextColumn Header="TOTAL" Width="140" Binding="{Binding Total, StringFormat=R$ {0:N2}}" ElementStyle="{StaticResource CancelAwareRightStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
                        <Grid>
                            <TextBlock Text="Subtotal:" HorizontalAlignment="Left" FontSize="16"/>
                            <TextBlock Name="LblSubtotal" Text="R$ 0,00" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16"/>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <TextBlock Text="Desconto:" HorizontalAlignment="Left" FontSize="16"/>
                            <TextBlock Name="LblDescontoTotal" Text="R$ 0,00" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16"/>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="TOTAL:" HorizontalAlignment="Left" FontWeight="Bold" Foreground="{StaticResource BrPrimariaAcao}" FontSize="24"/>
                            <TextBlock Name="LblFinalTotal" Text="R$ 241,00" HorizontalAlignment="Right" FontWeight="Bold" Foreground="{StaticResource BrPrimariaAcao}" FontSize="24"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Coluna Direita - Imagem e Ações -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{StaticResource CorBorda}" BorderThickness="0" Background="{StaticResource BrFundoApp}" Margin="0,0,0,0" Name="RightTopBorder" VerticalAlignment="Stretch" CornerRadius="6">
                    <Grid>
                        <Image Source="/Assets/logo_medusax8.png" Stretch="Uniform" Name="ProductImageDisplay" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Border Name="ExampleLogoPlaceholder" Background="#D32F2F" CornerRadius="6" Visibility="Collapsed" Margin="10">
                            <TextBlock Text="LOGO EXEMPLO" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Image Name="CustomLogoImage" Stretch="Uniform" Visibility="Collapsed" Margin="10"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1" BorderBrush="{StaticResource BrPrimariaAcao}" BorderThickness="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="70*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource BrPrimariaAcao}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!-- Removido TextBlock "QTD" e a segunda linha -->

                                <TextBox Name="InputQtyField"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         Margin="6,0,6,0"
                                         FontSize="18" FontWeight="Bold"
                                         Background="Transparent" Foreground="White"
                                         BorderThickness="0"
                                         Padding="8,0,8,0"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Focusable="False"
                                         IsTabStop="False"
                                         ContextMenu="{x:Null}"
                                         AllowDrop="False"
                                         PreviewMouseDown="RedirectQtyClickToCode"
                                         Style="{StaticResource WatermarkTextBoxCenterStyle}"
                                         Tag="QTD" />
                            </Grid>
                        </Border>

                        <TextBox Name="InputCodeField" Grid.Column="1" KeyDown="InputCodeField_KeyDown" PreviewMouseDown="InputCodeField_PreviewMouseDown"
                                 Background="#33007BFF"
                                 Foreground="{StaticResource BrTexto}"
                                 FontWeight="Bold" FontSize="18"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 Padding="10,0,5,0"
                                 Style="{StaticResource WatermarkTextBoxStyle}"
                                 Tag="DIGITE O CÓDIGO DE PRODUTO"
                                 TextChanged="InputCodeField_TextChanged"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Rodapé (DockPanel, 105px) -->
        <DockPanel Grid.Row="3" Background="{StaticResource BrFundoApp}" Margin="0,0,0,0">

            <Border DockPanel.Dock="Top" Height="80" Margin="0,1,0,10"
                    BorderBrush="{StaticResource CorBorda}" BorderThickness="0"
                    Background="{StaticResource BrFundoApp}">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button Content="F3 &#x0a; PAGAMENTO" Style="{StaticResource ShortcutButtonStyle}" Background="{StaticResource BrFinalizar}" Click="ShortcutAction"/>
                        <Button Content="SHIFT+D &#x0a; Desconto Item" Style="{StaticResource ShortcutButtonStyle}" Click="ShortcutAction"/>
                        <Button Content="F1 &#x0a; Cancelar Item" Style="{StaticResource ShortcutButtonStyle}" Click="ShortcutAction"/>
                        <Button Content="F5 &#x0a; Cancelar Venda" Style="{StaticResource ShortcutButtonStyle}" Background="{StaticResource BrCancelar}" Click="ShortcutAction"/>

                        <Separator Margin="10,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>

                        <!-- Removido botão de Configurações dos atalhos, substituído por botão ao lado de Logout -->
