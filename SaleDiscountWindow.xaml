<Window x:Class="PDV_MedusaX8.SaleDiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desconto da Venda" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Border Padding="12" Background="#ffffff" BorderBrush="#e0e0e0" BorderThickness="1" CornerRadius="6">
        <StackPanel Width="360" >
            <TextBlock Text="Aplicar desconto na venda" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Name="TxtTotalBase" Text="Total base: R$ 0,00" FontSize="14" Margin="0,0,0,12"/>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Valor:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="TxtDiscountValue" Height="28"/>
                <CheckBox Grid.Row="1" Grid.ColumnSpan="2" Name="ChkPercent" Content="Percentual (%)" Margin="0,6,0,0"/>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Motivo:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Name="CmbReason" Width="220">
                        <ComboBoxItem Content="Campanha promocional"/>
                        <ComboBoxItem Content="Acordo com cliente"/>
                        <ComboBoxItem Content="Avaria / exposição"/>
                        <ComboBoxItem Content="Outros"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <TextBlock Name="TxtHint" Text="Informe um valor ou percentual." Foreground="#666" FontSize="12"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Confirmar" Width="110" Height="30" Margin="0,0,6,0" Click="Confirm_Click"/>
                <Button Content="Cancelar" Width="90" Height="30" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>