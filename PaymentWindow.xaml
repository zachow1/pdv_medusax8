<Window x:Class="PDV_MedusaX8.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:PDV_MedusaX8.Models"
        mc:Ignorable="d"
        Title="Pagamento"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="#f5f5f5">

    <Window.Resources>
        <Color x:Key="CorFundoApp">#f5f5f5</Color>
        <Color x:Key="CorPrimariaAcao">#007bff</Color>
        <Color x:Key="CorFinalizar">#28a745</Color>
        <Color x:Key="CorCancelar">#9e9e9e</Color>
        <Color x:Key="CorTexto">#333333</Color>
        <Color x:Key="CorBordaColor">#e0e0e0</Color>
        <Color x:Key="CorMetodoClique">#e6f0ff</Color>
        <Color x:Key="CorRestantePendente">#ff9800</Color>
        <Color x:Key="CorTroco">#00796b</Color>

        <SolidColorBrush x:Key="CorBorda" Color="{StaticResource CorBordaColor}"/>
        <SolidColorBrush x:Key="BrFundoApp" Color="{StaticResource CorFundoApp}"/>
        <SolidColorBrush x:Key="BrPrimariaAcao" Color="{StaticResource CorPrimariaAcao}"/>
        <SolidColorBrush x:Key="BrFinalizar" Color="{StaticResource CorFinalizar}"/>
        <SolidColorBrush x:Key="BrCancelar" Color="{StaticResource CorCancelar}"/>
        <SolidColorBrush x:Key="BrTexto" Color="{StaticResource CorTexto}"/>
        <SolidColorBrush x:Key="BrMetodoClique" Color="{StaticResource CorMetodoClique}"/>
        <SolidColorBrush x:Key="BrRestantePendente" Color="{StaticResource CorRestantePendente}"/>
        <SolidColorBrush x:Key="BrTroco" Color="{StaticResource CorTroco}"/>

        <!-- Botão tile padrão, usado em alguns lugares -->
        <Style x:Key="PaymentTileButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrFundoApp}"/>
            <Setter Property="Foreground" Value="{StaticResource BrTexto}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource CorBorda}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <TextBlock Text="{TemplateBinding Content}" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BrMetodoClique}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BrFundoApp}" BorderBrush="{StaticResource CorBorda}" BorderThickness="1" Padding="5">
        <Grid>
            <!-- Dividir em 3 linhas: header branco, conteúdo, rodapé -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Linha 1: área superior branca e linha separadora 10px abaixo -->
            <Grid Grid.Row="0" Background="{StaticResource BrFundoApp}" MinHeight="40" MouseLeftButtonDown="Header_Drag">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Formas de Pagamento" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BrTexto}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button Grid.Column="1" Content="—" ToolTip="Minimizar" Click="BtnMinimize_Click" Padding="8,0" Margin="0,0,6,0" Background="{StaticResource BrFundoApp}" BorderBrush="{StaticResource CorBorda}"/>
                <Button Grid.Column="2" Content="✕" ToolTip="Fechar" Click="BtnClose_Click" Padding="8,0" Background="{StaticResource BrFundoApp}" BorderBrush="{StaticResource CorBorda}"/>
                <Border Grid.ColumnSpan="3" BorderBrush="{StaticResource CorBorda}" BorderThickness="0,0,0,1" Margin="0,10,0,0"/>
            </Grid>

            <!-- Linha 2: conteúdo principal em 3 colunas -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Coluna 1: Métodos de Pagamento (grid + scroll, 3 por linha) -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Border BorderBrush="{StaticResource CorBorda}" BorderThickness="1" CornerRadius="5" Background="#f5f5f5" Padding="0" Margin="0,10,0,10" MaxHeight="420">
                        <ListBox Name="PaymentItems" BorderThickness="0" Background="#f5f5f5" SelectionChanged="PaymentItems_SelectionChanged"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="6"/>
                                    <Setter Property="MinHeight" Value="88"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder" Background="White" CornerRadius="6" BorderBrush="{StaticResource CorBorda}" BorderThickness="1" Padding="12">
                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource BrPrimariaAcao}"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#F0F7FF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#2E7D32"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#E8F5E9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="ItemBorder" Property="Opacity" Value="0.6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:PaymentMethod}">
                                    <Grid>
                                        <TextBlock x:Name="TileText" Text="{Binding Name}" Foreground="{StaticResource BrTexto}" FontSize="15" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Parcelamento para vendas a prazo -->
                    <GroupBox Name="GbParcelamento" Visibility="Collapsed" Margin="0,10,0,0" Padding="10">
    <GroupBox.Header>
        <TextBlock Text="Parcelamento (venda a prazo)" FontSize="18" FontWeight="Bold"/>
    </GroupBox.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.ColumnSpan="4" Content="Selecionar Parcelas..." HorizontalAlignment="Right" Padding="8,4" Margin="0,0,0,8" Click="OpenParcelamento_Click"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="N° Parcela:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="TxtNumParcela" Width="80"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Valor Parcela:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Name="TxtValorParcela" Width="120"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Coluna 2: Área de inserção de valor -->
                <StackPanel Grid.Column="1" Margin="10,0,10,0">
                    <GroupBox Padding="14">
    <GroupBox.Header>
        <TextBlock Text="Método Selecionado" FontSize="18" FontWeight="Bold"/>
    </GroupBox.Header>
                        <TextBox Name="TxtSelectedMethod" Text="(nenhum)" IsReadOnly="True" Background="#e0e0e0" FontSize="16" FontWeight="Bold" Padding="10"/>
                    </GroupBox>

                    <GroupBox Padding="18" Margin="0,10,0,0">
    <GroupBox.Header>
        <TextBlock Text="Total de Vendas" FontSize="18" FontWeight="Bold"/>
    </GroupBox.Header>
                        <TextBlock Name="TxtSaleTotal" FontSize="24" FontWeight="Bold" Foreground="{StaticResource BrPrimariaAcao}" Text="R$ 0,00"/>
                    </GroupBox>

                    <GroupBox Padding="18" Margin="0,10,0,0" Background="#f9f9f9">
                        <GroupBox.Header>
                            <TextBlock Text="Valor a aplicar" FontSize="14" FontWeight="Bold" Foreground="{StaticResource BrTexto}"/>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBox Name="TxtValueToApply" Grid.Row="0" FontSize="18" FontWeight="Bold" Padding="10" Text="0,00" Background="#ffffff" BorderBrush="{StaticResource BrPrimariaAcao}" BorderThickness="2" TextAlignment="Right" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </GroupBox>

                    <Button Content="Adicionar Pagamento" Height="48" FontSize="16" Background="{StaticResource BrPrimariaAcao}" Foreground="White" Margin="0,10,0,0" Click="ApplyValue"/>
                </StackPanel>

                <!-- Coluna 3: Resumo e aplicados -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <GroupBox Padding="10" Background="#f0f0f0">
    <GroupBox.Header>
        <TextBlock Text="Totais da Venda" FontSize="18" FontWeight="Bold"/>
    </GroupBox.Header>
                        <StackPanel>
                            <Border Padding="5">
                                <StackPanel>
                                    <Button Content="Aplicar Desconto" Height="36" FontSize="14" Margin="0,0,0,8" Click="OpenSaleDiscountWindow"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total da Venda:" FontWeight="Bold" FontSize="17.6" Margin="0,0,0,6"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtTotalVenda" Text="R$ 0,00" FontWeight="Bold" FontSize="17.6" Margin="0,0,0,6"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Valor Pago:" FontSize="17.6"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtValorPago" Text="R$ 0,00" FontWeight="Bold" FontSize="17.6"/>
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Desconto:" FontSize="17.6"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtDescontoVenda" Text="R$ 0,00" FontWeight="Bold" FontSize="17.6"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Rectangle Height="1" Stroke="{StaticResource CorBorda}" StrokeThickness="1" StrokeDashArray="3 3" Margin="0,5,0,5"/>
                            <Border Padding="5">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Name="LblFaltaPagar" Text="Falta Pagar:" FontSize="24" FontWeight="Bold" Foreground="#dc3545"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtFaltaPagar" Text="R$ 0,00" FontWeight="Bold" FontSize="24" Foreground="#dc3545" TextAlignment="Right"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Name="LblVendaFechada" Text="Venda Fechada:" Visibility="Collapsed" FontSize="18" FontWeight="Bold" Foreground="#2E7D32" TextWrapping="NoWrap" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtVendaFechada" Text="R$ 0,00" FontWeight="Bold" Visibility="Collapsed" FontSize="18" Foreground="#2E7D32" TextAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Padding="0,8,0,8" Margin="0">
     <GroupBox.Header>
         <TextBlock Text="Pagamentos Aplicados" FontSize="18" FontWeight="Bold"/>
     </GroupBox.Header>
                        <Border Padding="0" Margin="0" BorderBrush="{StaticResource CorBorda}" BorderThickness="1" CornerRadius="5" Background="White">
                            <ListView Name="AppliedList" Height="180" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" FontSize="18"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ValueFormatted}" VerticalAlignment="Center" TextAlignment="Right" FontWeight="Bold" FontSize="18" Margin="0"/>
                                            <Button Grid.Column="2" Content="X" Tag="{Binding}" ToolTip="Excluir" Foreground="#dc3545" FontWeight="Black" Background="Transparent" BorderThickness="0" Click="RemoveAppliedItem_Click" HorizontalAlignment="Right" Padding="6,4" FontSize="18" MinWidth="28" MinHeight="28" Margin="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </GroupBox>
                </StackPanel>
            </Grid>

            <!-- Linha 3: rodapé com espaçamento de 30px e botões -->
            <Grid Grid.Row="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Cancelar (F4)" Background="{StaticResource BrCancelar}" Foreground="White" Padding="14,10" FontSize="16" Click="CancelarPagamentos"/>
                <Button Grid.Column="1" Name="BtnConfirm" Content="Finalizar Venda (ENTER)" Background="{StaticResource BrFinalizar}" Foreground="White" Padding="20,10" FontSize="16" Margin="10,0,0,0" IsEnabled="False" IsDefault="True" Click="ConfirmarPagamentos" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</Window>