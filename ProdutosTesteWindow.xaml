<Window x:Class="PDV_MedusaX8.ProdutosTesteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produto FÃ¡cil" Height="500" Width="720"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <ItemsControl Name="ItemsProdutos">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="6" Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Padding="8" Margin="6" Click="ProdutoTile_Click">
                            <StackPanel>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding PriceFormatted}" Foreground="#00796B"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Qtd:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="TxtQtd" Width="80" Text="1"/>
            <Button Content="Cancelar" Width="100" Click="BtnCancelar_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>