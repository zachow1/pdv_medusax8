<Window x:Class="PDV_MedusaX8.ProdutosSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulta de Produtos" Height="450" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Filtrar produtos:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Name="TxtFiltro" Height="28" TextChanged="TxtFiltro_TextChanged" />
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Produtos">
            <ListView Name="LstProdutos" SelectionMode="Single" MouseDoubleClick="LstProdutos_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Código" Width="120" DisplayMemberBinding="{Binding Code}"/>
                        <GridViewColumn Header="EAN" Width="120" DisplayMemberBinding="{Binding EAN}"/>
                        <GridViewColumn Header="Descrição" Width="300" DisplayMemberBinding="{Binding Description}"/>
                        <GridViewColumn Header="Preço" Width="100" DisplayMemberBinding="{Binding PriceFormatted}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Qtd:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="TxtQtd" Width="80" Text="1"/>
            <Button Content="Adicionar" Width="100" Margin="10,0,10,0" Click="BtnAdicionar_Click"/>
            <Button Content="Cancelar" Width="100" Click="BtnFechar_Click" Padding="8,0,8,0"/>
        </StackPanel>
    </Grid>
</Window>