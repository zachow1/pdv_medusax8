<Window x:Class="PDV_MedusaX8.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDV MedusaX8 - Login" 
        Height="500" 
        Width="400" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Estilo para botões (sem cantos arredondados) -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#FFDDDDDD">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF2196F3" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="PDV MedusaX8" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    
                    <!-- Botão Fechar -->
                    <Button x:Name="BtnClose" 
                            Content="✕" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="30" 
                            Height="30" 
                            Margin="0,5,10,0"
                            Background="Transparent" 
                            BorderThickness="0"
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- Conteúdo Principal -->
            <StackPanel Grid.Row="1" Margin="40,30" VerticalAlignment="Center">
                
                <!-- Logo/Ícone -->
                <Viewbox Width="80" Height="80" Margin="0,0,0,30">
                    <Canvas Width="24" Height="24">
                        <Path Fill="#FF2196F3" Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
                    </Canvas>
                </Viewbox>

                <!-- Título -->
                <TextBlock Text="Acesso ao Sistema" 
                         HorizontalAlignment="Center" 
                         FontSize="18" 
                         FontWeight="Bold" 
                         Foreground="#FF333333"
                         Margin="0,0,0,30"/>

                <!-- Campo Usuário -->
                <TextBlock Text="Usuário:" 
                         FontSize="14" 
                         FontWeight="SemiBold" 
                         Foreground="#FF666666"
                         Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUsuario" 
                       Style="{StaticResource LoginTextBoxStyle}"
                       Margin="0,0,0,10"
                       KeyDown="Input_KeyDown"/>

                <!-- Campo Senha -->
                <TextBlock Text="Senha:" 
                         FontSize="14" 
                         FontWeight="SemiBold" 
                         Foreground="#FF666666"
                         Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtSenha" 
                           Style="{StaticResource LoginPasswordBoxStyle}"
                           Margin="0,0,0,10"
                           KeyDown="Input_KeyDown"/>

                <!-- Mensagem de Erro -->
                <TextBlock x:Name="TxtMensagem" 
                         Text="" 
                         HorizontalAlignment="Center"
                         FontSize="12" 
                         Foreground="Red"
                         Margin="0,0,0,20"
                         Visibility="Collapsed"/>

                <!-- Botão Login -->
                <Button x:Name="BtnLogin" 
                      Content="ENTRAR" 
                      Style="{StaticResource LoginButtonStyle}"
                      HorizontalAlignment="Stretch"
                      Height="45"
                      Click="BtnLogin_Click"/>

            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#FFF5F5F5" CornerRadius="0,0,10,10">
                <TextBlock Text="© 2024 MedusaX8 - Sistema PDV" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"
                         FontSize="10" 
                         Foreground="#FF999999"/>
            </Border>

        </Grid>
    </Border>
</Window>