<Window x:Class="PDV_MedusaX8.ERPImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importar Pedido ERP" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Estilo para botões modernos (sem cantos arredondados) -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botão secundário -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para TextBox moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Importar Pedido ERP" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#333" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Preencha as informações do pedido para importação" 
                       FontSize="14" 
                       Foreground="#666" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Formulário -->
        <StackPanel Grid.Row="1">
            <!-- Nome do Cliente -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Nome do Cliente *" Style="{StaticResource ModernLabel}"/>
                <TextBox Name="TxtCustomerName" 
                         Style="{StaticResource ModernTextBox}"
                         Height="40"
                         ToolTip="Digite o nome completo do cliente"/>
            </StackPanel>

            <!-- Número do Pedido -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Número do Pedido *" Style="{StaticResource ModernLabel}"/>
                <TextBox Name="TxtOrderNumber" 
                         Style="{StaticResource ModernTextBox}"
                         Height="40"
                         ToolTip="Digite o número do pedido no sistema ERP"/>
            </StackPanel>

            <!-- Valor da Compra -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Valor da Compra *" Style="{StaticResource ModernLabel}"/>
                <TextBox Name="TxtOrderValue" 
                         Style="{StaticResource ModernTextBox}"
                         Height="40"
                         ToolTip="Digite o valor total da compra (ex: 150,00)"/>
            </StackPanel>

            <!-- Status da Sincronização -->
            <Border Background="#E3F2FD" 
                    BorderBrush="#2196F3" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Status da Sincronização" 
                               FontWeight="Bold" 
                               Foreground="#1976D2"/>
                    <TextBlock Name="TxtSyncStatus" 
                               Text="Aguardando dados..." 
                               Foreground="#666" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Botões -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="BtnClear" 
                    Grid.Column="1"
                    Content="Limpar" 
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="BtnClear_Click"/>

            <Button Name="BtnImport" 
                    Grid.Column="2"
                    Content="Importar Pedido" 
                    Style="{StaticResource ModernButton}"
                    Width="140"
                    Click="BtnImport_Click"/>
        </Grid>
    </Grid>
</Window>