<Window x:Class="PDV_MedusaX8.ERPImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importar Pedido ERP" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="BrFinalizar" Color="#28a745"/>
        <SolidColorBrush x:Key="BrCancelar" Color="#dc3545"/>
    </Window.Resources>
    <Border Padding="12" BorderBrush="#e0e0e0" BorderThickness="1" Background="#fffafa">
        <StackPanel Orientation="Vertical" Width="420">
            <TextBlock Text="Importar pedido de venda do ERP" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical" Margin="0,4,0,0">
                <TextBlock Text="Nome do Cliente"/>
                <TextBox Name="TxtCliente" Width="380"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock Text="NÃºmero do Pedido"/>
                <TextBox Name="TxtNumeroPedido" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock Text="Valor da Compra"/>
                <TextBox Name="TxtValor" Width="160"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Importar" Click="BtnImportar_Click" Background="{StaticResource BrFinalizar}" Foreground="White"/>
                <Button Content="Cancelar" Click="BtnCancelar_Click" Margin="8,0,0,0" Background="{StaticResource BrCancelar}" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>